@model TicketGenerator.UI.Models.TicketInfo

@{
	ViewBag.Title = "TicketInfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br />
<h2>Create Ticket</h2>

<div class="row">
    <div class="col-sm-6">
@using (Html.BeginForm("TicketInfo", "Home", FormMethod.Post, new { target = "_blank" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true)

		<div class="col-md-6">
			<div class="row">
				<div class="form-group">
					@Html.LabelFor(model => model.EventName, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.DropDownListFor(model => model.EventId, new SelectList(Model.Events, "Id", "Value"), new { @class = "form-control", @onchange = "TicketInfo.EventInfo()" })
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.EventDate, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.EventDate, new { @class = "form-control", @readonly = true })
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Stadium, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.Stadium, new { @class = "form-control", @readonly = true })
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Sector, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.DropDownListFor(model => model.SectorId, new SelectList(Model.Sectors, "Id", "Value"), new { @class = "form-control", @onchange = "TicketInfo.SectorInfo()" })
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Row, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.Row, new { @class = "form-control", @readonly = true })
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Number, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.Number, new { @class = "form-control", @readonly = true })
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.FirstName, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.FirstName)
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.LastName, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.LastName)
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.MiddleName, new {@class = "control-label col-sm-4"})
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.MiddleName, new {@class = "form-control"})
								@Html.ValidationMessageFor(model => model.MiddleName)
							</div>
						</div>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Price, new { @class = "control-label col-sm-4" })
					<div class="col-sm-8">
						<div class="col-sm-10 col-xs-12">
							<div class="row">
								@Html.TextBoxFor(model => model.Price, new { @class = "form-control", @readonly = true })
							</div>
						</div>
					</div>
				</div>

				@Html.HiddenFor(m => m.EventDate)

				<div class="form-group">
					<div class="col-sm-offset-4 col-md-8">
						<input type="submit" value="Create" class="btn btn-default" />
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-6">
		</div>
	</div>
}
        </div>
        <div class="col-sm-6">
            <div id="test">
            </div>
            <script src="~/Scripts/SVG_Test.js"></script>
        </div>
    </div> 
