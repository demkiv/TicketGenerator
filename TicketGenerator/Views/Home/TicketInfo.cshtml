@model TicketGenerator.Models.Ticket

@{
	ViewBag.Title = "TicketInfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br />
<h2>Create Ticket</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true)

		<div class="form-group">
			@Html.LabelFor(model => model.EventName, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.EventName, new { @class = "form-control" })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.EventName)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.EventDate, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.EventDate, new { @class = "form-control", type = "datetime-local" })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.EventDate)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.FirstName, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.FirstName)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.LastName, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.LastName)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.MiddleName, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control" })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.MiddleName)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Stadium, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.Stadium, new { @class = "form-control" })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.Stadium)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Sector, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.Sector, new { @class = "form-control" })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.Sector)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Row, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.Row, new { @class = "form-control", type = "number", min = 1 })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.Row)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Number, new { @class = "control-label col-sm-2" })
			<div class="col-sm-10">
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="row">
						@Html.TextBoxFor(model => model.Number, new { @class = "form-control", type = "number", min = 1 })
					</div>
				</div>
				<div class="col-md-6 col-sm-4 custom-error-inline">
					<div class="row">
						@Html.ValidationMessageFor(model => model.Number)
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}
